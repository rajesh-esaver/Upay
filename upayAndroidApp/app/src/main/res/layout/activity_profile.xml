<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".profile.ProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:id="@+id/profile_image"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:src="@drawable/ic_menu_black_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <TextView
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="Dhanraj peddireddy"
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center"
        android:text="PH : 9440640646"
        android:id="@+id/tv_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="3dp"
        android:textSize="20sp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Dhanrajpeddireddy@gmail.com"
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Limited Amount"

                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_limitedAmount"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:text="250 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Utilized Amount"

                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_UtilizedAmount"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:text="250 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




            <TextView
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="Remaining Amount"

                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_RemaingAmount"
                android:layout_marginBottom="10dp"
                android:textSize="30dp"
                android:text="250 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>